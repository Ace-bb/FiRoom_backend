.container {
  background-color: #f1f1ec;
  width: 100%;
  height: 1300rpx;
  padding: 6rpx;
}
.container .image_on {
  display: flex;
  width: 100%;
  height: 80%;
  padding: 24rpx;
  justify-content: center;
}
.container .image_on #image-on {
  display: flex;
  width: 80%;
  height: 100%;
  box-shadow: 6rpx 6rpx 6rpx 6rpx rgba(58, 56, 56, 0.6);
  margin-left: 24rpx;
  margin-right: 24rpx;
}
.container .bottom_area {
  position: fixed;
  justify-content: center;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  bottom: 0;
  width: 100%;
}
.container .bottom_area .but_left {
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.container .bottom_area .but_left .but_choose_user {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 6rpx;
  width: 200rpx;
  font-size: 36rpx;
  height: 80rpx;
  background-color: #e8f0f0;
  box-shadow: 6rpx 6rpx 6rpx 6rpx rgba(58, 56, 56, 0.4);
  border-radius: 24rpx;
}
.container .bottom_area .but_left #camera_image {
  background-color: #91e9ec;
  box-shadow: 6rpx 6rpx 6rpx 6rpx rgba(58, 56, 56, 0.4);
  width: 160rpx;
  height: 160rpx;
  border-radius: 500rpx;
}
.container .right_area {
  position: fixed;
  right: 0;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  width: 100rpx;
  height: 480rpx;
  background-color: #f5f2ee;
  margin-top: 64rpx;
  margin-right: 24rpx;
  white-space: nowrap;
  border-radius: 24rpx;
  box-shadow: 6rpx 6rpx 6rpx 6rpx rgba(58, 56, 56, 0.4);
}
.container .right_area .scroll-view-item {
  width: 100rpx;
  height: 100rpx;
}
.container .right_area .c_cloth {
  width: 100%;
  height: 100rpx;
}
