.container {
  width: 100%;
  padding: 36rpx;
  box-sizing: border-box;
  color: white;
  background-image: url('http://192.168.1.116:8087/static/images/back_image2.png');
}
.container .box-wrap {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
}
.container .box-wrap .title {
  font-size: 36rpx;
  font-weight: bolder;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 180px;
  padding: 10rpx;
  color: white;
  margin-left: 20px;
  -webkit-transform: skew(-20deg);
  -moz-transform: skew(-20deg);
  -o-transform: skew(-20deg);
  border-radius: 12rpx;
}
.container .box-wrap .message {
  width: 100%;
  margin-top: 16rpx;
  font-size: 28rpx;
  color: white;
  margin-top: 36rpx;
}
.container .box-wrap .introTi {
  background: rgba(228, 27, 27, 0.795);
}
.container .message {
  margin-top: 48rpx;
}
.container .message .mesTi {
  background: rgba(240, 63, 92, 0.795);
}
.container .indetify-factor {
  width: 100%;
  margin-top: 24rpx;
  display: flex;
  flex-direction: column;
  margin-top: 36rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.527);
  padding-bottom: 36rpx;
}
.container .indetify-factor .factor-title {
  width: 46%;
  font-size: 28rpx;
  background: rgba(228, 27, 211, 0.685);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 6rpx;
  margin-bottom: 16rpx;
}
.container .indetify-factor .factor-view {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  margin-bottom: 6rpx;
}
.container .indetify-factor .factor-view .dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 100rpx;
  background: gray;
  margin-top: 12rpx;
}
.container .indetify-factor .factor-view .factor {
  width: 100%;
  margin-left: 10rpx;
}
.container .final-condition-wrap {
  width: 100%;
  margin-top: 24rpx;
}
.container .final-condition-wrap .conditions {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.container .final-condition-wrap .conditions .title {
  width: 25%;
  padding: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: white;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
  background-color: rgba(145, 19, 134, 0.521);
}
.container .final-condition-wrap .conditions .isMeetCondition {
  margin-top: 8rpx;
  font-size: 28rpx;
}
.container .final-condition-wrap .conditions .isMeetCondition .wx-checkbox-input {
  width: 32rpx;
  height: 32rpx;
}
.container .notice-wrap {
  width: 100%;
  margin-top: 24rpx;
  display: flex;
  flex-direction: column;
  margin-top: 36rpx;
  padding-bottom: 36rpx;
  margin-bottom: 12rpx;
}
.container .notice-wrap .notice-view {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  margin-bottom: 6rpx;
}
.container .notice-wrap .notice-view .dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 100rpx;
  background: gray;
  margin-top: 12rpx;
}
.container .notice-wrap .notice-view .factor {
  width: 100%;
  margin-left: 10rpx;
}
.apply-button {
  width: 100%;
  height: 80rpx;
  background-color: gray;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  color: white;
  position: fixed;
  bottom: 0;
}
