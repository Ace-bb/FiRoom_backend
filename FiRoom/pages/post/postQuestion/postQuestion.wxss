Page {
  padding: 24rpx;
  box-sizing: border-box;
}
Page .container {
  width: 100%;
  background-color: rgba(231, 229, 226, 0.267);
}
Page .container .offer-reward-wrap {
  width: 100%;
  height: 72rpx;
  display: flex;
  align-items: center;
  margin-top: 24rpx;
  margin-bottom: 24rpx;
  background-color: white;
}
Page .container .offer-reward-wrap .reward-title {
  width: 240rpx;
  height: 100%;
  display: flex;
  align-items: center;
}
Page .container .offer-reward-wrap .input-reward-area {
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
  font-weight: lighter;
  font-size: 32rpx;
}
Page .container .post-title-wrap {
  height: 72rpx;
  width: 100%;
  min-height: 0px;
  padding: 12 rpx;
  box-sizing: border-box;
  background-color: white;
}
Page .container .post-title-wrap .post-title {
  height: 100%;
  line-height: 25px;
  font-family: monospace;
  white-space: pre-wrap;
  font: 36rpx Arial;
  font-weight: bold;
  display: flex;
}
Page .container .post-mainbody-wrap {
  width: 100%;
  height: 120px;
  padding: 12 rpx;
  box-sizing: border-box;
  background-color: white;
  border-bottom: 1rpx solid rgba(49, 49, 49, 0.219);
}
Page .container .post-mainbody-wrap .post-mainbody {
  width: 100%;
  height: 150px;
  padding: 6px;
  box-sizing: border-box;
  font-family: monospace;
  white-space: pre-wrap;
  font: 13.3333px Arial;
  border-width: 1px;
  border-style: none;
  border-top-style: solid;
  border-color: rgba(162, 167, 167, 0.521);
}
Page .container .post-image-wrap {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  box-sizing: content-box;
  background-color: white;
}
Page .container .post-image-wrap .image-upload {
  width: 23%;
  height: 180rpx;
  overflow: hidden;
  margin-left: 12rpx;
  margin-bottom: 24rpx;
  padding: 2rpx;
  border-radius: 12rpx;
  box-shadow: 2rpx 2rpx 2rpx 2rpx rgba(32, 31, 31, 0.4);
  margin-top: 24rpx;
}
Page .container .post-image-wrap .image-upload .img {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}
Page .container .post-image-wrap .image-upload-but {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 23%;
  height: 180rpx;
  padding: 2rpx;
  margin-bottom: 24rpx;
  margin-left: 12rpx;
  border-radius: 12rpx;
  box-shadow: 2rpx 2rpx 2rpx 2rpx rgba(32, 31, 31, 0.4);
  margin-top: 24rpx;
}
Page .container .post-image-wrap .image-upload-but .img-photo {
  width: 40%;
  height: 30%;
  border-radius: 12rpx;
}
Page .container .post-image-wrap .image-upload-but .text-photon {
  font-size: 32rpx;
}
Page .container .post-image-wrap .image-upload-but .add-img {
  width: 48rpx;
  height: 48rpx;
  position: relative;
  right: -70rpx;
  bottom: 130rpx;
}
Page .container .post-submit-container {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  padding: 12rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  background-color: white;
}
Page .container .post-submit-container .post-position-wrap {
  width: 100rpx;
  height: 100rpx;
  padding: 6rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
Page .container .post-submit-container .post-position-wrap .draft-img {
  width: 50%;
  height: 50%;
}
Page .container .post-submit-container .post-position-wrap .draft-text {
  font-size: 20rpx;
}
Page .container .post-submit-container .post-submit {
  height: 100%;
  width: 300rpx;
  text-align: center;
  font-size: 14px;
  background-size: initial;
  display: flex;
  align-items: center;
  justify-content: center;
}
