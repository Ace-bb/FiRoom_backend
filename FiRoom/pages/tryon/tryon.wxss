.container {
  background-color: rgba(148, 148, 144, 0.562);
  width: 100%;
  height: 100vh;
  padding: 6rpx;
  box-sizing: border-box;
  position: relative;
}
.container .image_on {
  display: flex;
  width: 100%;
  height: 100%;
  padding: 24rpx;
  box-sizing: border-box;
  justify-content: center;
  position: absolute;
}
.container .image_on #image-on {
  display: flex;
  width: 90%;
  height: 100%;
  box-shadow: 6rpx 6rpx 6rpx 6rpx rgba(58, 56, 56, 0.6);
  margin-left: 24rpx;
  margin-right: 24rpx;
}
.container .bottom_area {
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  flex-wrap: wrap;
  bottom: 0;
  width: 100%;
  height: 100rpx;
}
.container .bottom_area .but-view {
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  padding: 6rpx;
  width: 32%;
  font-size: 32rpx;
  height: 64rpx;
  background-color: #e8f0f0;
  box-shadow: 6rpx 6rpx 6rpx 6rpx rgba(58, 56, 56, 0.4);
  border-radius: 24rpx;
  margin-left: 16rpx;
}
.container .bottom_area .but_input_link {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 6rpx;
  box-sizing: border-box;
  width: 200rpx;
  font-size: 32rpx;
  height: 64rpx;
  background-color: #e8f0f0;
  box-shadow: 6rpx 6rpx 6rpx 6rpx rgba(58, 56, 56, 0.4);
  border-radius: 24rpx;
}
.container .bottom_area .camera-icon {
  width: 80rpx;
  height: 80rpx;
}
.container .right_area {
  position: fixed;
  right: 0;
  width: 160rpx;
  height: 85vh;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  white-space: nowrap;
  box-shadow: 6rpx 6rpx 6rpx 6rpx rgba(105, 99, 99, 0.205);
}
.container .right_area .title {
  width: 100%;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid blue;
  padding: 10rpx;
  box-sizing: border-box;
  background-color: #f5f2ee;
  border-radius: 6rpx;
}
.container .right_area .checked_clothes {
  width: 100%;
  height: 100%;
  padding: 12rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f2ee;
  border-radius: 6rpx;
}
.container .right_area .checked_clothes .scroll-view-item {
  width: 100%;
  height: 120rpx;
  margin-top: 16rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.226);
}
.container .right_area .checked_clothes .c_cloth {
  width: 100%;
  height: 100rpx;
}
.container .right_area .right-but {
  width: 48rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 6rpx;
  margin-right: 0rpx;
  background-color: #f5f2ee;
  padding: 6rpx;
}
.container .right_area .right-but .right-but-img {
  height: 100%;
}
.container .hide-right-container {
  width: 48rpx;
  height: 80rpx;
  position: fixed;
  right: 0;
  bottom: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 6rpx;
  background-color: #f5f2ee;
  padding: 6rpx;
}
.container .hide-right-container .right-but {
  height: 100%;
  width: 100%;
}
.container .hide-right-container .right-but .right-but-img {
  width: 100%;
  height: 100%;
}
.container .left_area {
  position: fixed;
  left: 0;
  width: 160rpx;
  height: 85vh;
  display: flex;
  flex-direction: column;
  margin-right: 24rpx;
