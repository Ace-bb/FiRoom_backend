page {
  height: 100%;
  background-color: #f7f4f4;
}
.cates {
  height: 100%;
}
.cates .cates_container {
  /* less中使用calc的时候要注意 */
  height: calc(100vh-90rpx);
  display: flex;
}
.cates .cates_container .right_category {
  position: fixed;
  width: 180rpx;
  flex-direction: column;
  box-shadow: 6rpx 6rpx 6rpx 6rpx rgba(58, 56, 56, 0.1);
}
.cates .cates_container .right_category .ji_ming {
  height: 96rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.cates .cates_container .right_category .left_menu {
  /* 子项 高度 100% flex*/
  /*background-color: aqua;*/
  margin-top: 5rpx;
}
.cates .cates_container .right_category .left_menu .menu_item {
  height: 96rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.cates .cates_container .right_category .left_menu .active {
  color: var(--themeColor);
  border-left: 5rpx,solid,currentColor;
}
.cates .cates_container .right_content {
  /*子项 高度 100% flex*/
  flex: 8;
  margin-left: 184rpx;
  /*background-color: lawngreen;*/
}
.cates .cates_container .right_content .goods_group {
  margin-left: 15rpx;
  margin-top: 10rpx;
  margin-right: 15rpx;
}
.cates .cates_container .right_content .goods_group .category_image {
  height: 200rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  box-shadow: 0rpx 6rpx 6rpx 6rpx rgba(58, 56, 56, 0.1);
}
.cates .cates_container .right_content .goods_group .goods_title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cates .cates_container .right_content .goods_group .goods_title .delimiter {
  color: #ccc;
  padding: 0 10rpx;
}
.cates .cates_container .right_content .goods_group .goods_list {
  display: flex;
  flex-wrap: wrap;
  box-shadow: 0rpx 6rpx 6rpx 6rpx rgba(58, 56, 56, 0.1);
  padding-bottom: 10rpx;
}
.cates .cates_container .right_content .goods_group .goods_list navigator {
  width: 46%;
  height: 100%;
  text-align: center;
  margin-top: 24rpx;
}
.cates .cates_container .right_content .goods_group .goods_list navigator image {
  width: 80%;
}
